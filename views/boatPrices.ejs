<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/style.css">
    <title>Rent a Boat Prices</title>
</head>
<body>
  <img src="../images/myconcierge-logo.svg" alt="MyConcierge Logo" width="300" height="100" id="myConciergeLogo">
  <div class="everypayTitle">
      <h1>Τιμοκατάλογος Ενοικίασης Σκαφών</h1>
    </div>
    <form class="row g-3" id="boatPricesForm" method="POST">
        <input type="hidden" id="rowIndexInput2" name="rowIndex2" value="0">
        <table id="boatTable">
            <thead>
                <tr>
                    <th style="width: 7%;">ΟΝΟΜΑΣΙΑ ΣΚΑΦΟΥΣ</th>
                    <th style="width: 7%;">ΤΥΠΟΣ ΣΚΑΦΟΥΣ</th>
                    <th style="width: 7%;">ΤΙΜΗ ΑΠΟ (ΑΝΑ ΗΜΕΡΑ)</th>
                    <th style="width: 7%;">ΠΕΡΙΓΡΑΦΗ</th>
                </tr>
            </thead>
            <tbody id="boatPriceInputsBody">
                <!-- Rows will be added dynamically here -->
            </tbody>
        </table>
        <div class="col-12" style="margin: 10px;">
            <button type="button" class="btn btn-primary" id="addBoatPrices">+</button>
        </div>
        <div class="col-12" style="margin: 10px;">
            <button type="submit" class="btn btn-primary" id="submitBoatPrices">Υποβολή</button>
        </div>
    </form>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const addBoatPricesBtn = document.getElementById('addBoatPrices');
            const boatPriceInputsBody = document.getElementById('boatPriceInputsBody');
            const rowIndexInput2 = document.getElementById('rowIndexInput2');
            let rowIndex2 = parseInt(rowIndexInput2.value);

            addBoatPricesBtn.addEventListener('click', function() {
                const row = document.createElement('tr');

                for (let i = 0; i < 4; i++) {
                    const cell = document.createElement('td');

                    if (i === 3) { // Second column
                        const textarea = document.createElement('textarea');
                        textarea.name = `b-row${rowIndex2}-input${i + 1}`;
                        textarea.classList.add('form-control');
                        cell.appendChild(textarea);
                    } else {
                        const input = document.createElement('input');
                        input.type = 'text';
                        input.name = `b-row${rowIndex2}-input${i + 1}`;
                        input.classList.add('form-control');
                        cell.appendChild(input);
                    }

                    row.appendChild(cell);
                }

                boatPriceInputsBody.appendChild(row);
                rowIndexInput2.value = rowIndex2; // Update the value of the hidden input before incrementing rowIndex
                rowIndex2++;
            });
        });
    </script>
</body>
</html>
